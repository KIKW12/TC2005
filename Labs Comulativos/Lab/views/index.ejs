<!DOCTYPE html>
<html>
<head>
    <title>Sistema de control escolar</title>
    <style>
        .container { 
            max-width: 800px; 
            margin: 50px auto; 
            text-align: center; 
        }
        .nav-links {
            margin: 20px;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 10px;
        }
        .nav-links a {
            display: inline-block;
            padding: 10px 20px;
            margin: 10px;
            background: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
        .section {
            margin-bottom: 30px;
        }
        h2 {
            color: #333;
        }
        .user-section {
            position: absolute;
            top: 20px;
            right: 20px;
            text-align: right;
        }
        .theme-switch {
            margin-top: 10px;
        }
        body.dark {
            background-color: #333;
            color: #fff;
        }
        body.dark h2 {
            color: #fff;
        }
        body.dark .nav-links a {
            background: #2c6e2e;
        }
        .admin-section {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
            padding: 10px;
            margin-bottom: 30px;
        }
        .admin-section h2 {
            color: #721c24;
        }
        .admin-section .nav-links a {
            background: #dc3545;
        }
        body.dark .admin-section {
            background-color: #721c24;
            border-color: #f5c6cb;
        }
        body.dark .admin-section h2 {
            color: #f5c6cb;
        }
        body.dark .admin-section .nav-links a {
            background: #bd2130;
        }
    </style>
</head>
<body class="<%= theme %>">
    <div class="user-section">
        <% if (isLoggedIn) { %>
            <span>Bienvenido, <%= username %>!</span>
            <br>
            <a href="/logout">Logout</a>
            <div class="theme-switch">
                <label>
                    <input type="checkbox" id="theme-toggle" <%= theme === 'dark' ? 'checked' : '' %>>
                    Dark Mode
                </label>
            </div>
        <% } else { %>
            <a href="/login">Login</a>
            <a href="/signup" style="margin-left: 10px;">Registro</a>
        <% } %>
    </div>

    <div class="container">
        <h1>Lab 11+ - Sistema de control escolar</h1>
        
        <% if (isLoggedIn) { %>
            <%  
                // Helper function to check if user has a specific role
                const hasRole = (roleName) => {
                    return user && user.roles && Array.isArray(user.roles) && 
                           user.roles.some(role => role.name === roleName);
                };
                
                // Helper function to check if user has any of the specified roles
                const hasAnyRole = (roleNames) => {
                    return user && user.roles && Array.isArray(user.roles) && 
                           user.roles.some(role => roleNames.includes(role.name));
                };
            %>

            <% if (hasRole('admin')) { %>
                <div class="section admin-section">
                    <h2>Administraci贸n</h2>
                    <div class="nav-links">
                        <a href="/admin/dashboard">Panel Administrativo</a>
                    </div>
                </div>
            <% } %>

            <div class="section">
                <h2>Gesti贸n de Estudiantes</h2>
                <div class="nav-links">
                    <a href="/students">Ver estudiantes</a>
                    <% if (hasAnyRole(['admin', 'teacher'])) { %>
                        <a href="/students/add">Agregar estudiante</a>
                    <% } %>
                </div>
            </div>

            <div class="section">
                <h2>Gesti贸n de Cursos</h2>
                <div class="nav-links">
                    <a href="/courses">Ver cursos</a>
                    <% if (hasAnyRole(['admin', 'teacher'])) { %>
                        <a href="/courses/add">Agregar curso</a>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <p>Inicia sesi贸n para entrar al sistema</p>
        <% } %>
    </div>

    <script>
        document.getElementById('theme-toggle')?.addEventListener('change', function() {
            const newTheme = this.checked ? 'dark' : 'light';
            fetch('/theme', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'CSRF-Token': '<%= typeof csrfToken !== "undefined" ? csrfToken : "" %>'
                },
                body: JSON.stringify({ theme: newTheme }),
            }).then(() => {
                document.body.className = newTheme;
            });
        });
    </script>
</body>
</html>